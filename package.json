{
  "name": "@eibii/lily-ui",
  "version": "0.0.6",
  "private": false,
  "description": "Biblioteca de componentes da daisyUI em Vue 3",
  "author": "ERC Dev <dev@eibii.com> (https://www.ercdev.com.br/)",
  "homepage": "https://lilyui.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eibii/lily-ui"
  },
  "keywords": [
    "design-system",
    "tailwindcss",
    "components",
    "ui-library",
    "component",
    "framework",
    "tailwind",
    "vue",
    "daisyui",
    "theming",
    "postcss",
    "design",
    "css",
    "ui",
    "vue-tailwind",
    "vue-components",
    "tailwind-components"
  ],
  "files": [
    "dist/*"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./styles.css": "./dist/style.css"
  },
  "browser": {
    "./styles.css": "./dist/style.css"
  },
  "module": "./dist/tail-uix.es.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" -- && npx tailwindcss -o src/assets/css/build.css --minify",
    "preview": "vite preview",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0",
    "bootstrap-icons": "^1.11.3",
    "lodash-es": "^4.17.21",
    "tailwindcss-animated": "^1.0.1",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@playwright/test": "^1.42.1",
    "@rushstack/eslint-patch": "^1.3.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.28",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^4.7.3",
    "eslint": "^8.49.0",
    "eslint-plugin-playwright": "^1.5.2",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.38",
    "prettier": "^3.0.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "sass": "^1.72.0",
    "semantic-release": "^24.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.4.0",
    "vite": "^5.1.6",
    "vite-plugin-vue-devtools": "^7.0.18",
    "vitest": "^1.4.0",
    "vue-tsc": "^2.0.6"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
